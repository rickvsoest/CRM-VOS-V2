generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id          String   @id @default(cuid())
  firstName   String
  infix       String?  // tussenvoegsel
  lastName    String
  email       String   @unique
  phone       String?
  street      String?
  houseNumber String?
  postcode    String?
  city        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  documents   Document[]
}

model Document {
  id          String   @id @default(cuid())
  customerId  String
  originalName String
  fileName     String
  mimeType     String?
  size         Int?
  path         String
  createdAt    DateTime @default(now())

  customer     Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  role         String   @default("medewerker")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model UserInvite {
  id         String   @id @default(cuid())
  email      String
  role       String   @default("KLANT")
  customerId String?
  tokenHash  String   @unique
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime @default(now())

  @@index([email])
}
