{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true,
    "types": ["vite/client"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["src", "vite-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
